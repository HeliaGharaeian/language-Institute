@page
@model languageInstituteProject.Pages.StudentCRUD.DeleteStudentModel
@{
}

<h1>Delete Student </h1>


@if (ViewData["message"] != null)
{
    <div class="alert alert-info">
        <strong>@ViewData["message"]</strong>
    </div>
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-md-2">
            <label asp-for="Students.Name"></label>
        </dt>
        <dd class="col-md-8">
            <label>@Model.Students.Name</label>
        </dd>
    </dl>
    <form method="post" asp-page="DeleteStudent">
        <input type="hidden" asp-for="Students.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        |
        <a href="GetStudents" class="btn btn-outline-primary" role="button" aria-disabled="true">Back to list</a>
    </form>
</div>
@page
@model languageInstituteProject.Pages.TeacherCRUD.GetTeachersModel
@{
}


<h1>Teachers List</h1>




<a href="CreateTeacher" class="btn btn-success " role="button" aria-disabled="true">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Class Number</th>
            <th>Delete|Edit </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>
                    @item.classes
                </td>
                <td>
                    <a asp-page="./DeleteTeacher" onclick="return confirm('Are you sure you want to ');" asp-route-id="@item.Id">Delete</a> |
                    <a asp-page="./EditTeacher" asp-page-handler="EditTeacher" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>
